<!doctype html>
<html lang="en">

<%- include('../part/head') %>

  <body>
    <%- include('../part/nav') %>
      <div id="background"></div>
      <div class="container main-container">
        <div class="text-center">
          <h2>Bảng xếp hạng</h2>
        </div>
        <div class="row">
          <div class="col-12 col-md-6">
            <div class="text-center">
              <h3>Thường</h3>
              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>Xếp hạng</th>
                    <th>ID</th>
                    <th>Tên</th>
                    <th>Câu hỏi</th>
                    <th>Thời gian</th>
                  </tr>
                </thead>
                <tbody>
                  <% normalRankings.forEach(user => { %>
                    <tr>
                      <th scope="col"><%= user.rank %></th>
                      <td><%= user.id %></td>
                      <td><%= user.name %></td>
                      <td><%= user.current.normal %>/<%=numNormalQuestion%></td>
                      <% if (user.current.normal > 0) { %>
                        <td><%= new Date(user.answer.normal[user.answer.normal.length - 1].time).toLocaleString('vi-VI') %></td>
                        <% } else { %>
                        <td>-</td>
                        <% } %>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="col-12 col-md-6">
            <div class="text-center">
              <h3>Khó</h3>
              <table class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <th>Xếp hạng</th>
                    <th>ID</th>
                    <th>Tên</th>
                    <th>Câu hỏi</th>
                    <th>Thời gian</th>
                  </tr>
                </thead>
                <tbody>
                  <% hardRankings.forEach(user => { %>
                    <tr>
                      <th scope="col"><%= user.rank %></th>
                      <td><%= user.id %></td>
                      <td><%= user.name %></td>
                      <td><%= user.current.hard %>/<%=numHardQuestion%></td>
                      <% if (user.current.hard > 0) { %>
                      <td><%= new Date(user.answer.hard[user.answer.hard.length - 1].time).toLocaleString('vi-VI') %></td>
                      <% } else { %>
                      <td>-</td>
                      <% } %>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
  </body>

  <%- include('../part/foot') %>

</html>