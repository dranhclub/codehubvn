<!DOCTYPE html>
<html lang="en">

<%- include('./head') %>

<body>
    <%- include('./nav') %>
    
    <div class="container">
        <h1>Quản lý câu hỏi</h1>
        <div class="row">
            <div class="col">
                <a href="/admin/add-question" class="btn btn-info">
                    Thêm câu hỏi
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <table class="table">
                    <thead>
                        <td>id</td>
                        <td>text</td>
                        <td>img</td>
                        <td>video</td>
                    </thead>
                    <% questions.forEach(question => { %>
                        <tr>
                            <td><%= question.id %></td>
                            <td><%= question.data.text %></td>
                            <td>
                                <img src="<%= question.data.image %>" alt="" style="max-width: 200px;">
                            </td>
                            <td><%= question.data.video %></td>
                        </tr>
                    <% }); %>

                </table>
            </div>
        </div>

    </div>
</body>

